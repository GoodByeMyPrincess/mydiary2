<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hp.mydiary">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/splash_style">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DiaryListActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/AppTheme2"></activity>
        <activity
            android:name=".DiaryActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/AppTheme2"></activity>
        <activity
            android:name=".DiarySortAddActivity"
            android:parentActivityName=".DiaryListActivity"
            android:theme="@style/AppTheme2"></activity>
        <activity
            android:name=".DiarySortEditActivity"
            android:parentActivityName=".DiaryListActivity"
            android:theme="@style/AppTheme2"></activity>
        <activity
            android:name=".UserInformationActivity"
            android:parentActivityName=".DiaryListActivity"
            android:theme="@style/AppTheme2"></activity>
        <activity
            android:name=".ForgetPasswordActivity"
            android:theme="@style/AppTheme2">

        </activity>
    </application>

</manifest>